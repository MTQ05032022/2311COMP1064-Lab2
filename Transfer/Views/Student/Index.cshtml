@model Transfer.Models.Student

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1>Index</h1>

    <h4>Student</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Show" asp-controller="Student" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StudentId" class="control-label"></label>
                    <input asp-for="StudentId" class="form-control" name="StudentId" value="@ViewBag.StudentId" />
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentName" class="control-label"></label>
                    <input asp-for="StudentName" class="form-control" name="StudentName" value="@ViewBag.StudentName" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mark" class="control-label"></label>
                    <input asp-for="Mark" class="form-control" name="Mark" value="@ViewBag.Mark" />
                    <span asp-validation-for="Mark" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsMale" /> @Html.DisplayNameFor(model => model.IsMale)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" name="Grade" value="@ViewBag.Grade" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Ghi file text" name="command" class="btn btn-primary" />
                    <input type="submit" value="Ghi file Json" name="command" class="btn btn-primary" /> <br /><br />
                    <a asp-action="OpenData" asp-route-type="TEXT" class="btn btn-success">Mở file TEXT</a>
                    <a asp-action="OpenData" asp-route-type="JSON" class="btn btn-success">Mở file JSON</a>
                </div>
            </form>
        </div>
    </div>
    <h4>@ViewBag.Message</h4>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>
